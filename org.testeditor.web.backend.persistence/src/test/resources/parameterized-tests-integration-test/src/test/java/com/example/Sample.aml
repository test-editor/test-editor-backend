package com.example

import com.example.DummyFixture
import com.example.DummyLocatorStrategy

component type Application {}

interaction type typeInto {
	template = "type" ${value} "into" ${element}
	method = DummyFixture.typeInto(element, locatorStrategy, value)
}

interaction type click {
    template = "click" ${element}
    method = DummyFixture.click(element, locatorStrategy)
}

element type Text {
	interactions = typeInto
}

element type Button {
    interactions = click
}

component DemoApp is Application {
	element FirstNameField is Text {
		locator = "text.firstName"
		locatorStrategy = DummyLocatorStrategy.ID
	}
	element LastNameField is Text {
		locator = "text.lastName"
		locatorStrategy = DummyLocatorStrategy.ID
	}
	element AgeField is Text {
		locator = "text.age"
		locatorStrategy = DummyLocatorStrategy.ID
	}
	element Confirm is Button {
	    locator = "button.confirm"
	    locatorStrategy = DummyLocatorStrategy.ID
	}
}
